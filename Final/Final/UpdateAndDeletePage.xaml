<Window x:Class="Final.UpdateAndDeletePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final"
        mc:Ignorable="d"
        Title="UpdateAndDeletePage" Height="591.744" Width="749.495">
    <Grid Margin="0,0,-8,-21">
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="32" Margin="104,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="1"/>
        <TextBox x:Name="txtAuthor" HorizontalAlignment="Left" Height="32" Margin="104,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="2"/>
        <TextBox x:Name="txtEdition" HorizontalAlignment="Left" Height="32" Margin="104,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="3"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Height="32" Margin="104,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="4"/>
        <TextBox x:Name="txtIsbn" HorizontalAlignment="Left" Height="32" Margin="104,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TabIndex="5"/>
        <Label x:Name="label3" Content="Title:" HorizontalAlignment="Left" Margin="42,131,0,0" VerticalAlignment="Top" Width="34" Height="29"/>
        <Label x:Name="label1" Content="Author:" HorizontalAlignment="Left" Margin="41,174,0,0" VerticalAlignment="Top" Width="46" Height="29"/>
        <Label x:Name="label4" Content="Edition:" HorizontalAlignment="Left" Margin="41,224,0,0" VerticalAlignment="Top" Width="46" Height="28"/>
        <Label x:Name="label5" Content="Price:" HorizontalAlignment="Left" Margin="50,270,0,0" VerticalAlignment="Top" Width="37" Height="29"/>
        <Label x:Name="label6" Content="ISBN-10:" HorizontalAlignment="Left" Margin="32,319,0,0" VerticalAlignment="Top" Width="55" Height="29"/>
