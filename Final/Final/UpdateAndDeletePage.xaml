        <Label x:Name="label" Content="Update/Delete Books Form" HorizontalAlignment="Left" Height="33" Margin="48,10,0,0" VerticalAlignment="Top" Width="296"/>
        <TextBox x:Name="searchtxt" HorizontalAlignment="Left" Height="35" Margin="170,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202"/>
        <Label x:Name="label1_Copy" Content="Search book by ISBN" HorizontalAlignment="Left" Height="35" Margin="14,66,0,0" VerticalAlignment="Top" Width="151" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="search" Content="Search" HorizontalAlignment="Left" Height="35" Margin="377,66,0,0" VerticalAlignment="Top" Width="98" FontSize="14" FontWeight="Bold" Click="button5_Click"/>
    </Grid>
</Window>
